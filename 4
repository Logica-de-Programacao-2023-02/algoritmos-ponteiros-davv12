package main

import "fmt"

func somarUltimosDigitos(p *int) {
	valor := *p

	digito1 := valor % 10
	valor /= 10
	digito2 := valor % 10

	soma := digito1 + digito2

	*p = soma
}

func main() {
	numero := 1234

	somarUltimosDigitos(&numero)

	fmt.Printf("O novo valor da variável é: %d\n", numero)
}

