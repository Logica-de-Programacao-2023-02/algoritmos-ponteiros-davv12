package main

import (
	"fmt"
)

func somaNaturais(p *int, n int) {
	if n <= 0 {
		return
	}

	soma := 0

	for i := 1; i <= n; i++ {
		soma += i
	}

	*p = soma
}

func main() {
	var resultado int
	n := 5

	somaNaturais(&resultado, n)

	fmt.Printf("A soma dos primeiros %d números naturais é: %d\n", n, resultado)
}
